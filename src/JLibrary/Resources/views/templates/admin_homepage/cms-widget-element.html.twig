<div class="cms-element">
    <h3 class="section-heading column basis30">{{ heading }}</h3>
    <p class="section-subheading column basis40">{{ description }}</p>
    <div class="actions-container column basis30">
        {% if (path_new ?? false) %}
            <a href="{{ path(path_list) }}" class="btn btn-success">list all</a>
            <a href="{{ path(path_new) }}" class="quick-add btn btn-default">create new</a>
        {% else %}
            <a href="{{ path(path_manage) }}" class="quick-add btn btn-warning">manage</a>
        {% endif %}
    </div>
</div>