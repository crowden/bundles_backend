<div class="admin page-crud-index main-content">
    <h1 class="page-title">{{ page_title }}</h1>{# FLASHBAGS #}
    
    <div class="container">
        {% include 'JLibrary:templates/flashbags:flashbags.html.twig' %}

        {# additional admin links #}
        <div class="additional-admin-links">
            <div class="float-left">
                <a href="{% block crud_new_path %}{% endblock %}" class="add-new-link btn btn-success">new</a>
                <a href="{{ path('j29.admin.index') }}" class="admin-listing-link btn btn-primary">admin home</a>
            </div>
            <div class="float-right">{% block sorting %}{% endblock %}</div>
        </div>

        {# table info #}
        <div class="table-container">
            <div class="table">
                {# table header #}
                <div class="table-row-header">
                    {% block crud_table_header %}{% endblock %}
                </div>
                {% for entity in entities %}
                    <div class="table-row-body">
                        {% block crud_table_data %}{% endblock %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>