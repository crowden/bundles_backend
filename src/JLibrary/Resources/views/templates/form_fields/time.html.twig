{% set sublabel_class_present = (sublabel_class ?? false) ? sublabel_class : null %}
{% set container_class = (row_class ?? false) ? 'form-row date-picker ' ~ row_class : 'form-row date-picker' %}

<div class="{{ container_class }}">
    <div class="basis100">
        {#------------ Label ------------#}
        {{ form_label(field, label ?? null) }}

        {#------------ Sublabel ------------#}
        {% include 'JLibrary:templates/form_fields:_inc-crud-sublabel.html.twig' %}
        
        {#------------ Errors ------------#}
        <div class="field-error-container">{{ form_errors(field) }}</div>
    </div>
    
    {#------------ Form Control ------------#}
    {% for item in field %}
       <div class="pod basis50">
           {{ form_errors(item) }}
           {{ form_widget(item) }}
       </div>
    {% endfor %}
</div>