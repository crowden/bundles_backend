{% extends 'JLibrary:templates/layout:basic.html.twig' %}

{% block header %}{% include 'J29Bundle:inc:menu-top.html.twig' %}{% endblock %}

{% block main_content %}
    {% embed 'JLibrary:templates/layout:crud-index.html.twig' %}
        {% block crud_new_path %}{{ path('j29.crud.document.new') }}{% endblock %}

        {% set sorting_options = 
            {
                'base_url' : path('j29.crud.document.index') ~ 'sort/',
                'paths' : 
                [
                    {
                        'name': 'name',
                        'url': 'documentName'
                    },
                    {
                        'name': 'category',
                        'url': 'documentCategory'
                    },
                    {
                        'name': 'published',
                        'url': 'published/desc'
                    },
                    {
                        'name': 'reset',
                        'url': 'reset'
                    }
                ]
            }
        %}
        
        {% block sorting %}
            <div id="js-sorting" class="sorting" data-options="{{ sorting_options|json_encode|e('html_attr') }}"></div>
        {% endblock %}
        
        {% block crud_table_header %}
            <div class="header h2 basis20">Document</div>
            <div class="header h2 basis20">Category</div>
            <div class="header h2 basis20">Description</div>
            <div class="header h2 basis10 center-text">Link</div>
            <div class="header h2 basis15 center-text">Published</div>
            <div class="header h2 header-actions basis15 center-text">Actions</div>
        {% endblock %}

        {% block crud_table_data %}
            <div class="column basis20">{{ entity.documentName }}</div>
            <div class="column basis20">{{ entity.documentCategory.title }}</div>
            <div class="column basis20">{{ entity.documentDescription }}</div>
            <div class="column basis10 center-text"><a target="_blank" href="{{ asset('uploads/documents/' ~ entity.document) }}">view</a></div>
            <div class="column basis15 center-text">{% if entity.published %}&#128309;{% else %}&#9899;{% endif %}</div>
            <div class="column column-actions basis15 center-text"><a href="{{ path('j29.crud.document.edit', {'id': entity.id}) }}" class="btn btn-danger">update / delete</a>
            </div>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block footer %}{% include 'J29Bundle:inc:footer.html.twig' %}{% endblock %}

{% block javascript %}
    {# necessary to trigger show/hide boxes #}
    <script type="text/javascript">var j29_sort_crud_index = true;</script>
    {{ parent() }}
{% endblock %}